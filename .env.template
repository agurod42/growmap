# Google Maps Platform credentials
GOOGLE_MAPS_API_KEY=your_server_side_places_api_key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_client_maps_api_key

# Optional map defaults (lat,lng format)
NEXT_PUBLIC_DEFAULT_LOCATION=-34.9011,-56.1645

# Reference city tuning
REFERENCE_CITY_RADIUS_METERS=18000
REFERENCE_CITY_SEGMENTS=4

# Protect the sync endpoint
SYNC_CRON_TOKEN=change_me

# Dataset storage
# Override only when the default ./data/cache path is not writable (e.g. on serverless)
PLACE_CACHE_DIR=./data/cache
# PLACE_CACHE_FILE=/absolute/path/to/montevideo-places.json

# Local cron utility configuration
DEV_CRON_SCHEDULE=0 * * * *
DEV_CRON_TIMEZONE=UTC
DEV_CRON_RUN_ON_START=false
